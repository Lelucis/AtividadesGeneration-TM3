<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#754CAF50"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoN"
        android:layout_width="83dp"
        android:layout_height="66dp"
        android:background="#1D4A4A4A"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236"
        tools:text="1" />

    <Button
        android:id="@+id/BotaoD6"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="#009688"
        android:fontFamily="@font/trocchi"
        android:text="@string/dado_d6"
        android:textColor="#ECF1E6"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoN"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/botaoD12"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="#009688"
        android:text="@string/botao_d12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotaoD6"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/botaoD20"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="#009688"
        android:text="@string/botao_d20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoD12"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>